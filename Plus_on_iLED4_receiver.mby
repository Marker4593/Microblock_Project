{"config.json":"{\"mode\":\"code\",\"github\":null,\"board\":\"openbit\",\"level\":\"Beginner\"}","main.py":"from machine import Pin\nfrom time import sleep\nimport display\nimport iLED4\nimport ESPNOW as now\nimport _thread\n\nprint(now.getMyMAC())\n# 10:97:BD:21:2D:F0\n\nnum1, num2, num3, num4 = 0, 0, 0, 0\nshow_point = True\nA_Point = 0\nB_Point = 0\n\ndef show_Point():\n    global num1, num2, num3, num4\n    while show_point:\n        iLED4.drawColon(True)\n        # Team A\n        iLED4.writeDigitNum(0, num1, False)\n        iLED4.writeDigitNum(1, num2, False)\n        \n        # Team B\n        iLED4.writeDigitNum(2, num3, False)\n        iLED4.writeDigitNum(3, num4, False)\n_thread.start_new_thread(show_Point, ())\n\ndef Process_Point(process):\n    global num1, num2, num3, num4, A_Point, B_Point\n    if process == \"Reset_Done\":\n        sleep(0.25)\n        num1, num2, num3, num4 = 0, 0, 0, 0\n        A_Point, B_Point = 0, 0\n    if process == \"A_UP\":\n        sleep(0.25)\n        num2 += 2\n        A_Point += 2\n        if num2 > 8 and num1 < 9:\n            num2 -= 2\n            num2 = 0\n            num1 += 1\n        elif num2 > 8 and num1 == 9:\n            num1 += 2\n            num2 += 2\n            num1 = 0\n            num2 = 0\n            A_Point = 0\n    elif process == \"A_DOWN\":\n        sleep(0.25)\n        num2 -= 2\n        A_Point -= 2\n        if num2 < 0 and num1 > 0:\n            num2 = 8\n            num1 -= 1\n        elif num2 < 0 and num1 == 0:\n            num2 += 2\n            num2 = 8\n            num1 = 9\n            A_Point = 98\n    elif process == \"B_UP\":\n        sleep(0.25)\n        num4 += 2\n        B_Point += 2\n        if num4 > 8 and num3 < 9:\n            num4 -= 2\n            num4 = 0\n            num3 += 1\n        elif num4 > 8 and num3 == 9:\n            num3 += 2\n            num4 += 2\n            num3 = 0\n            num4 = 0\n            B_Point = 0\n    elif process == \"B_DOWN\":\n        sleep(0.25)\n        num4 -= 2\n        B_Point -= 2\n        if num4 < 0 and num3 > 0:\n            num4 = 8\n            num3 -= 1\n        elif num4 < 0 and num3 == 0:\n            num4 += 2\n            num4 = 8\n            num3 = 9\n            B_Point = 98\n            \n\ndef Send_status(status, point):\n    package = [status, point]\n    now.send(package, \"8C:CE:4E:BB:4A:FC\")\n    print(f\"Status is send {package}\")\n    print(f\"Status is type {type(package)}\")\n    sleep(0.12)\n\ndef Send_Point(point):\n    now.send(point, \"8C:CE:4E:BB:4A:FC\")\n    print(f\"Point is send {point}\")\n\ndef main_receiver():\n    global num1, num2, num3, num4, A_Point, B_Point\n    display.show('C', display.hex2byte('#ff0000'))\n    if now.isReadyToRead():\n        now.readAsText()\n        process = now.readAsText()\n\n        if process == \"A_UP\":\n            Process_Point(\"A_UP\")\n            Send_status(\"A_UP\", A_Point)\n            \n        elif process == \"A_DOWN\":\n            Process_Point(\"A_DOWN\")\n            Send_status(\"A_DOWN\", A_Point)\n\n        elif process == \"B_UP\":\n            Process_Point(\"B_UP\")\n            Send_status(\"B_UP\", B_Point)\n\n        elif process == \"B_DOWN\":\n            Process_Point(\"B_DOWN\")\n            Send_status(\"B_DOWN\", B_Point)\n\n        elif process == \"Reset_Done\":\n            Process_Point(\"Reset_Done\")\n            All_Point = A_Point + B_Point\n            Send_status(\"Reset\", All_Point)\n        \n        \nwhile True:\n    main_receiver()\n"}