{"config.json":"{\"mode\":\"code\",\"github\":null,\"board\":\"openbit\",\"level\":\"Beginner\"}","main.py":"import _thread\nimport buzzer\nimport _thread\nimport display\nimport ESPNOW as now\nimport iLED4\nfrom machine import Pin\nfrom time import sleep\nnum1, num2, num3, num4 = 0, 0, 0, 0\ndef runInBackground_1():\n    while True:\n        display.show(\"R\")\n        iLED4.drawColon(True)\n        iLED4.writeDigitNum(0, num1, False)\n        iLED4.writeDigitNum(1, num2, False)\n        iLED4.writeDigitNum(2, num3, False)\n        iLED4.writeDigitNum(3, num4, False)\n        sleep(0.3)\n\n_thread.start_new_thread(runInBackground_1, ())\n\n\n# 8C:CE:4E:BB:4A:FC is Receiver\n\ndef update_score(operation):\n    global num1, num2, num3, num4\n    if operation == \"AP\":\n        num2 += 1\n        now.send(\"AP\", '10:97:BD:21:2D:F0')\n        if num2 > 9 and num1 < 9:\n            num2 = 0\n            num1 += 1\n        if num2 > 9 and num1 == 9:\n            num1 = 0\n            num2 = 0\n\n    elif operation == \"AD\":\n        num2 -= 1\n        now.send(\"AD\", '10:97:BD:21:2D:F0')\n        # if num2 > 9:\n        #     num1 += 1\n        #     num2 = 0\n        if num2 < 0 and num1 > 0:\n            num1 -= 1\n            num2 = 9\n        if num2 < 0 and num1 == 0:\n            num1 = 9\n            num2 = 9\n\n    elif operation == \"BP\":\n        num4 += 1\n        now.send(\"BP\", '10:97:BD:21:2D:F0')\n        if num4 > 9 and num3 < 9:\n            num4 = 0\n            num3 += 1\n        if num4 > 9 and num3 == 9:\n            num3 = 0\n            num4 = 0\n    elif operation == \"BD\":\n        num4 -= 1\n        now.send(\"BD\", '10:97:BD:21:2D:F0')\n        if num4 < 0 and num3 > 0:\n            num3 -= 1\n            num4 = 9\n        if num4 < 0 and num3 == 0:\n            num3 = 9\n            num4 = 9\ndef addon_function(operation):\n    global num1, num2, num3, num4\n    while operation == \"800\":\n            operation = int(operation)\n            buzzer.tone(operation, 1)\n\n    if operation == \"C\":\n        num1, num2, num3, num4 = 0, 0, 0, 0\n        now.send(\"C\", '10:97:BD:21:2D:F0')\n\ndef main_function():\n    if now.isReadyToRead():\n        now.readAsText()\n        checking = now.readAsText()\n        if checking == \"AP\":\n            update_score(\"AP\")\n        elif checking == \"AD\":\n            update_score(\"AD\")\n        elif checking == \"BP\":\n            update_score(\"BP\")\n        elif checking == \"BD\":\n            update_score(\"BD\")\n        elif checking == \"800\":\n            addon_function(\"800\")\n        elif checking == \"C\":\n            addon_function(\"C\")\n\nwhile True:\n    main_function()\n\n    \n\n        \n\n        \n\n\n\n"}